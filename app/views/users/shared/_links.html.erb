<%- if controller_name != 'sessions' %>
  <span class="block"><%= I18n.t 'user.already_have' %> <%= link_to I18n.t('user.login_link'), new_session_path(resource_name, :locale => I18n.locale), {:class => "primary-text"} %></span>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
<span class="block"><%= I18n.t 'user.dont_have_account' %> <%= link_to I18n.t('user.register_link'), new_registration_path(resource_name, :locale => I18n.locale), {:class => "primary-text"} %></span>
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <span class="block"><%= I18n.t 'user.forgot_password' %> <%= link_to link_to I18n.t('user.forgot_link'), new_password_path(resource_name, :locale => I18n.locale), {:class => "primary-text"} %></span>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name, :locale => I18n.locale) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name, :locale => I18n.locale) %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider, :locale => I18n.locale) %><br />
  <% end -%>
<% end -%>
